        <!-- 기간 설정 모달 -->
        <div id="date-range-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
            <div class="bg-white w-full max-w-xs mx-4 rounded-xl shadow-lg p-5">
                <h3 class="font-bold text-lg text-gray-800 mb-4">기간 설정</h3>
                <div class="flex flex-col space-y-3">
                    <div class="flex flex-col">
                        <label class="text-xs text-gray-500 mb-1">시작일</label>
                        <input type="date" id="start-date" class="border border-gray-300 rounded px-2 py-2 text-sm focus:outline-none focus:border-blue-500">
                    </div>
                    <div class="flex flex-col">
                        <label class="text-xs text-gray-500 mb-1">종료일</label>
