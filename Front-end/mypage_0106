    <script>
        const currencyFormatter = new Intl.NumberFormat('ko-KR');
        // 가상 현재 날짜 설정 (2025년 8월 27일)
        const MOCK_TODAY = new Date('2025-08-27');

        // [신규] 쿠폰 모달 제어 함수
        function openCouponModal() {
            const modal = document.getElementById('coupon-modal');
            const content = document.getElementById('coupon-modal-content');
            modal.classList.remove('hidden');
            setTimeout(() => {
                content.classList.remove('scale-95', 'opacity-0');
                content.classList.add('scale-100', 'opacity-100');
            }, 10);
        }

        function closeCouponModal() {
            const modal = document.getElementById('coupon-modal');
            const content = document.getElementById('coupon-modal-content');
            content.classList.remove('scale-100', 'opacity-100');
            content.classList.add('scale-95', 'opacity-0');
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 200); 
        }

        // [신규] 기간 설정 모달 제어
        function openDateRangeModal() {
            const modal = document.getElementById('date-range-modal');
            modal.classList.remove('hidden');
        }

        function closeDateRangeModal() {
            const modal = document.getElementById('date-range-modal');
            modal.classList.add('hidden');
        }

        function applyDateRange() {
            const chips = document.querySelectorAll('#settlements .filter-chip');
            chips.forEach(c => c.classList.remove('active'));
            const customChip = document.querySelector('#settlements .filter-chip[data-filter="custom"]');
            if(customChip) customChip.classList.add('active');

            closeDateRangeModal();
            filterSettlements(); 
        }

        function toggleAccordion(headerElement) {
            const itemContainer = headerElement.parentElement;
            const details = itemContainer.querySelector('.order-details');
            const arrow = headerElement.querySelector('.arrow-icon');
            
            if (details.classList.contains('hidden')) {
                details.classList.remove('hidden');
                arrow.classList.add('rotate-180');
                headerElement.classList.add('bg-gray-50'); 
            } else {
                details.classList.add('hidden');
                arrow.classList.remove('rotate-180');
                headerElement.classList.remove('bg-gray-50');
            }
        }

        function hideZeroValues() {
            const candidates = document.querySelectorAll('.hide-if-zero');
            candidates.forEach(el => {
                if (el.innerText.includes('0원(') || el.innerText.includes(': 0원')) { 
                    el.classList.add('hidden'); 
                } else {
                    el.classList.remove('hidden'); 
                }
            });
        }

        function parseDate(dateStr) {
            if (!dateStr) return null;
            let fullDateStr = dateStr;
            if (dateStr.match(/^\d{2}\.\d{2}\.\d{2}$/)) {
                fullDateStr = '20' + dateStr; 
            }
            fullDateStr = fullDateStr.replace(/\./g, '-');
            return new Date(fullDateStr);
        }

        // --- 필터링 로직 ---

        // 1. 주문내역 필터링
        function filterOrders() {
            const activePeriod = document.querySelector('#orders .filter-chip.active')?.dataset.filter || 'all';
            const unpaidOnly = document.getElementById('unpaid-only-toggle').checked;
            
            const items = document.querySelectorAll('#order-list-container .order-item');
            
            items.forEach(item => {
                const dateStr = item.dataset.date;
                const itemDate = new Date(dateStr);
                const itemText = item.innerText;
                let show = true;

                // 기간 필터
                if (activePeriod === '7days') {
                    const diffTime = Math.abs(MOCK_TODAY - itemDate);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)); 
                    if (diffDays > 7) show = false;
                } else if (activePeriod === 'currentMonth') {
                    if (itemDate.getMonth() !== MOCK_TODAY.getMonth() || itemDate.getFullYear() !== MOCK_TODAY.getFullYear()) show = false;
                } else if (activePeriod === 'lastMonth') {
                    const lastMonthDate = new Date(MOCK_TODAY);
                    lastMonthDate.setMonth(MOCK_TODAY.getMonth() - 1);
                    if (itemDate.getMonth() !== lastMonthDate.getMonth() || itemDate.getFullYear() !== lastMonthDate.getFullYear()) show = false;
                }

                // 미입금 필터
                if (show && unpaidOnly) {
                    if (!itemText.includes('(미입금)')) show = false;
                }

                if (show) item.classList.remove('hidden');
                else item.classList.add('hidden');
            });
        }

        // 2. 알림내역 필터링
        function filterNotifications() {
            const activeFilter = document.querySelector('#notifications .filter-chip.active')?.dataset.filter || 'all';
            const items = document.querySelectorAll('#notification-list-container .notice-row');

            items.forEach(item => {
                const content = item.innerText;
                let show = true;

                if (activeFilter === 'order') {
                    const isOrderChange = content.includes('주문 변경') || content.includes('배송') || content.includes('수량변경') || content.includes('취소');
                    if (!isOrderChange) show = false;
                } else if (activeFilter === 'point') {
                    if (!content.includes('포인트')) show = false;
                } else if (activeFilter === 'coupon') {
                    if (!content.includes('쿠폰')) show = false;
                }

                if (show) item.classList.remove('hidden');
                else item.classList.add('hidden');
            });
        }

        // 3. 정산내역 필터링
        function filterSettlements() {
            const activePeriod = document.querySelector('#settlements .filter-chip.active')?.dataset.filter || 'thisMonth'; 
            const items = document.querySelectorAll('#settlement-list-container .settlement-item');
            
            items.forEach(item => {
                const dateStr = item.dataset.date;
                const itemDate = new Date(dateStr);
                let show = true;

                if (activePeriod === 'today') {
                    const todayStr = MOCK_TODAY.toISOString().split('T')[0];
                    if (dateStr !== todayStr) show = false; 
                } else if (activePeriod === 'thisMonth') {
                    if (itemDate.getMonth() !== MOCK_TODAY.getMonth() || itemDate.getFullYear() !== MOCK_TODAY.getFullYear()) {
                        show = false;
                    }
                } else if (activePeriod === 'lastMonth') {
                    const lastMonthDate = new Date(MOCK_TODAY);
                    lastMonthDate.setMonth(MOCK_TODAY.getMonth() - 1);
                    if (itemDate.getMonth() !== lastMonthDate.getMonth() || itemDate.getFullYear() !== lastMonthDate.getFullYear()) {
                        show = false;
                    }
                } else if (activePeriod === 'custom') {
                    // show = true;
                }

                if (show) item.classList.remove('hidden');
                else item.classList.add('hidden');
            });

            calculateSettlementSummary(); 
        }

        function calculateSettlementSummary() {
            const items = document.querySelectorAll('#settlement-list-container .settlement-item:not(.hidden)');
            let totalSales = 0;
            let totalDeposit = 0;
            let currentBalance = 0; 
            items.forEach(item => {
                const sales = parseInt(item.dataset.sales || 0);
                const deposit = parseInt(item.dataset.deposit || 0);
                totalSales += sales;
                totalDeposit += deposit;
            });
            currentBalance = totalSales - totalDeposit;

            const summarySalesEl = document.getElementById('summary-sales');
            const summaryDepositEl = document.getElementById('summary-deposit');
            const summaryBalanceEl = document.getElementById('summary-balance');

            if (summarySalesEl) summarySalesEl.innerText = currencyFormatter.format(totalSales);
            if (summaryDepositEl) summaryDepositEl.innerText = currencyFormatter.format(totalDeposit);
            
            if (summaryBalanceEl) {
                summaryBalanceEl.innerText = currencyFormatter.format(Math.abs(currentBalance));
                summaryBalanceEl.classList.remove('text-red-600', 'text-blue-600', 'text-gray-900');
                if (currentBalance > 0) summaryBalanceEl.classList.add('text-red-600');
                else if (currentBalance < 0) summaryBalanceEl.classList.add('text-blue-600');
                else summaryBalanceEl.classList.add('text-gray-900');
            }
        }

        function sortItems(container, itemSelector, dateAttribute, direction) {
            if (!container) return; 
            const items = Array.from(container.querySelectorAll(itemSelector));
            items.sort((a, b) => {
                const dateA = a.getAttribute(dateAttribute) || '';
                const dateB = b.getAttribute(dateAttribute) || '';
                if (direction === 'asc') return dateA.localeCompare(dateB);
                else return dateB.localeCompare(dateA);
            });
            items.forEach(item => container.appendChild(item));
        }

        function sortItemsByText(container, itemSelector, dateSelector, direction) {
            if (!container) return; 
            const items = Array.from(container.querySelectorAll(itemSelector));
            items.sort((a, b) => {
                const dateTextA = a.querySelector(dateSelector)?.innerText || '';
                const dateTextB = b.querySelector(dateSelector)?.innerText || '';
                if (direction === 'asc') return dateTextA.localeCompare(dateTextB);
                else return dateTextB.localeCompare(dateTextA);
            });
            items.forEach(item => container.appendChild(item));
        }

        document.addEventListener('DOMContentLoaded', () => {
            const mainTabs = document.querySelectorAll('.main-tab-btn');
            const contents = document.querySelectorAll('.tab-content');

            mainTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    mainTabs.forEach(t => t.classList.remove('active'));
                    contents.forEach(c => c.classList.remove('active'));
                    tab.classList.add('active');
                    const contentId = tab.dataset.tab;
                    const contentElement = document.getElementById(contentId);
                    if(contentElement) {
                        contentElement.classList.add('active');
                        if (contentId === 'settlements') filterSettlements();
                        if (contentId === 'orders') filterOrders();
                        if (contentId === 'notifications') filterNotifications();
                    }

                    if (tab.dataset.tab === 'notifications') {
                        const notiBadge = document.getElementById('notification-count-badge');
                        if (notiBadge) {
                            notiBadge.classList.add('hidden');
                        }
                    }
                });
            });
            
            const filterChips = document.querySelectorAll('.filter-chip');
            filterChips.forEach(chip => {
                chip.addEventListener('click', function() {
                    if (this.dataset.filter === 'custom') {
                        openDateRangeModal();
                        return; 
                    }

                    const siblings = this.parentElement.querySelectorAll('.filter-chip');
                    siblings.forEach(sib => sib.classList.remove('active'));
                    this.classList.add('active');

                    const group = this.parentElement.dataset.target;
                    if (group === 'orders') filterOrders();
                    else if (group === 'notifications') filterNotifications();
                    else if (group === 'settlements') filterSettlements();
                });
            });

            const unpaidToggle = document.getElementById('unpaid-only-toggle');
            if (unpaidToggle) {
                unpaidToggle.addEventListener('change', filterOrders);
            }

            const copyBtn = document.getElementById('copyAccountBtn');
            const accountSpan = document.getElementById('accountNumber'); 
            const copyMsg = document.getElementById('copyMessage');

            if (copyBtn && accountSpan && copyMsg) {
                copyBtn.addEventListener('click', () => {
                    const accountNumText = accountSpan.innerText; 
                    const tempTextarea = document.createElement('textarea');
                    tempTextarea.value = accountNumText; 
                    document.body.appendChild(tempTextarea);
                    tempTextarea.select();
                    try {
                        document.execCommand('copy');
                        copyMsg.classList.remove('hidden');
                        setTimeout(() => { copyMsg.classList.add('hidden'); }, 1500);
                    } catch (err) { console.error('계좌번호 복사 실패:', err); }
                    document.body.removeChild(tempTextarea);
                });
            }

            hideZeroValues();
            
            filterOrders();
            filterNotifications();
            filterSettlements();

            const sortOrderButton = document.getElementById('sort-order-date');
            const sortOrderArrow = document.getElementById('sort-order-arrow');
            const orderContainer = document.getElementById('order-list-container');
            let orderSortDirection = 'desc'; 
            if (sortOrderButton && orderContainer) {
                sortOrderButton.addEventListener('click', () => {
                    orderSortDirection = orderSortDirection === 'desc' ? 'asc' : 'desc';
                    sortOrderArrow.innerText = orderSortDirection === 'desc' ? '▼' : '▲';
                    sortItems(orderContainer, '.order-item', 'data-date', orderSortDirection);
                });
            }

            const sortSettlementButton = document.getElementById('sort-settlement-date');
            const sortSettlementArrow = document.getElementById('sort-settlement-arrow');
            const settlementContainer = document.getElementById('settlement-list-container');
            let settlementSortDirection = 'asc'; 
            if (sortSettlementButton && settlementContainer) {
                sortSettlementButton.addEventListener('click', () => {
                    settlementSortDirection = settlementSortDirection === 'asc' ? 'desc' : 'asc';
                    sortSettlementArrow.innerText = settlementSortDirection === 'asc' ? '▲' : '▼';
                    sortItems(settlementContainer, '.settlement-item', 'data-date', settlementSortDirection);
                });
            }

            const sortNotificationButton = document.getElementById('sort-notification-date');
            const sortNotificationArrow = document.getElementById('sort-notification-arrow');
            const notificationContainer = document.getElementById('notification-list-container');
            let notificationSortDirection = 'desc'; 

            if (sortNotificationButton && notificationContainer) {
                sortNotificationButton.addEventListener('click', () => {
                    notificationSortDirection = notificationSortDirection === 'desc' ? 'asc' : 'desc';
                    sortNotificationArrow.innerText = notificationSortDirection === 'desc' ? '▼' : '▲';
                    sortItemsByText(notificationContainer, '.notice-row', 'data-date', notificationSortDirection);
                });
            }

            const noticeLink = document.getElementById('header-notice-link');
            const noticeBadge = document.getElementById('header-notice-badge');
            const LATEST_NOTICE_ID = 'notice_2025_11_27_update';
            const lastReadNoticeId = localStorage.getItem('lastReadNoticeId');

            if (lastReadNoticeId !== LATEST_NOTICE_ID) {
                if (noticeBadge) noticeBadge.classList.remove('hidden');
            } else {
                if (noticeBadge) noticeBadge.classList.add('hidden');
            }

            if (noticeLink) {
                noticeLink.addEventListener('click', (e) => {
                    if (noticeBadge) noticeBadge.classList.add('hidden');
                    localStorage.setItem('lastReadNoticeId', LATEST_NOTICE_ID);
                });
            }
        });
    </script>
</body>
</html>
